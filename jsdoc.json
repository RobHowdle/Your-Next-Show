{
    "source": {
        "include": ["resources/js"],
        "includePattern": "\\.js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "destination": "docs/js",
        "recurse": true
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}